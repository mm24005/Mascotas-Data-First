@model MascotasNDMM.Models.Mascota

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar una mascota 📝</h1>
<img src="~/imagenes/mascotascrear.png" class="float-end" width="300">
<ul></ul>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="Nombre" class="control-label"></label>
                
                <input asp-for="Nombre" class="form-control" />
                <ul></ul>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Especie" class="control-label"></label>
                <input asp-for="Especie" class="form-control" />
                <ul></ul>
                <span asp-validation-for="Especie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raza" class="control-label"></label>
                <input asp-for="Raza" class="form-control" />
                <ul></ul>
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <ul></ul>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Propietario" class="control-label"></label>
                <input asp-for="Propietario" class="form-control" />
                <ul></ul>
                <span asp-validation-for="Propietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary"/>
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                
            </div>
        </form>
    </div>
</div>

<div>
    

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
